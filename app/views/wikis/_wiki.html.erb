<tr>
	<td><%= link_to (markdown_to_html wiki.title), wiki %></td>
	<td><% if wiki.private == true %>
		Yes
		<% else %>
		No
		<% end %>
	</td>
	<td>
		<% if policy(wiki).edit? %>
		<%= link_to "Edit Wiki",  edit_wiki_path(wiki), class: 'btn btn-success' %>
		<% end %>
	</td>
	<td>
		<% if policy(wiki).destroy? %>
		<%= link_to "Delete Wiki", wiki, method: :delete, class: 'btn btn-info' %>
		<% end %>
	</td>
	<td>
		<% if policy(wiki).edit? %>
		<%= link_to "Add/Remove Collaborator",  edit_wiki_path(wiki, user_id: current_user), class: 'btn btn-warning' %>
		<% end %>
	</td>

</tr>		
