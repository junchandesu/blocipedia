<div class="container">
 <div class="row">
	<div class="col-md-10">
		<h4>Let's edit the wiki.~</h4>
			<%= render partial: 'form', locals: { wiki: @wiki} %>
	</div>
 </div>
</div>

<br>
<div class="container">
 <div class="row">
	<div class="col-md-10">
		<h4>You can add/remove your collaborator for your "<%= @wiki.title %>" Wiki</h4>
		<% @users.each do |user| %>
		    <%= user.email %>
		    <% if !@collaborator %>
				<%= link_to "Add as collaborator", user_wiki_collaborators_path(@wiki, user_id: current_user), method: :post %>
			<% else %>
				"Your Collaborator" <%= link_to "Remove as collaborator", user_wiki_collaborator_path(@wiki, user_id: current_user), method: :destroy %>
			<% end %>
			<br>
		<% end %>	
	</div>
 </div>
</div>
</br>
<div class="container">
	<%= link_to "Go back to My Wiki Page", current_user%>
</div>

